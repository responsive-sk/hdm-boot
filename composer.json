{
    "name": "mva/bootstrap-app",
    "description": "MVA Bootstrap Application with modular architecture",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "cakephp/database": "^5.2",
        "cakephp/validation": "^5.2",
        "firebase/php-jwt": "^6.8",
        "monolog/monolog": "^3.9",
        "php-di/php-di": "^7.0",
        "ramsey/uuid": "^4.7",
        "responsive-sk/slim4-paths": "^2.0",
        "responsive-sk/slim4-session": "^2.0.0",
        "slim/php-view": "^3.4",
        "slim/psr7": "^1.6",
        "slim/slim": "^4.12",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.21",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^10.3",
        "squizlabs/php_codesniffer": "^3.7"
    },

    "autoload": {
        "psr-4": {
            "MvaBootstrap\\": "src/",
            "MvaBootstrap\\Modules\\Core\\": "src/Modules/Core/",
            "MvaBootstrap\\Monitoring\\": "packages/monitoring/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MvaBootstrap\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html var/coverage",
        "stan": "phpstan analyse",
        "cs-check": "phpcs --standard=PSR12 src",
        "cs-fix": "phpcbf --standard=PSR12 src",
        "security-scan": "./bin/scripts/check-paths.sh",
        "security-fix": "echo 'Run: composer security-scan to see issues, then fix manually using Paths service'",
        "quality": [
            "@security-scan",
            "@stan",
            "@cs-check",
            "@test"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "classmap-authoritative": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
