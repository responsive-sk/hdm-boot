{
    "name": "mva/bootstrap-app",
    "description": "MVA Bootstrap Application with modular architecture",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "mva-bootstrap/database": "@dev",
        "mva-bootstrap/security": "@dev",
        "mva-bootstrap/session": "@dev",
        "mva-bootstrap/user": "@dev",
        "mva-bootstrap/template": "@dev",
        "mva-bootstrap/language": "@dev",
        "firebase/php-jwt": "^6.8",
        "monolog/monolog": "^3.9",
        "odan/session": "^6.1",
        "php-di/php-di": "^7.0",
        "ramsey/uuid": "^4.7",
        "responsive-sk/slim4-paths": "^1.0",
        "slim/php-view": "^3.4",
        "slim/psr7": "^1.6",
        "slim/slim": "^4.12",
        "vlucas/phpdotenv": "^5.5",
        "mva-bootstrap/monitoring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "friendsofphp/php-cs-fixer": "^3.21"
    },
    "autoload": {
        "psr-4": {
            "MvaBootstrap\\": "src/",
            "MvaBootstrap\\Modules\\Core\\": "src/Modules/Core/",
            "MvaBootstrap\\Monitoring\\": "packages/monitoring/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MvaBootstrap\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html var/coverage",
        "stan": "phpstan analyse src --level=9",
        "cs-check": "phpcs --standard=PSR12 src",
        "cs-fix": "phpcbf --standard=PSR12 src",
        "quality": [
            "@phpstan",
            "@cs-check",
            "@test"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "classmap-authoritative": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "packages/*",
            "options": {
                "symlink": true
            }
        }
    ]
}
