{
    "name": "mva/bootstrap-app",
    "description": "MVA Bootstrap Application with modular architecture",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "cakephp/database": "^5.2",
        "cakephp/log": "^5.2",
        "cakephp/validation": "^5.2",
        "firebase/php-jwt": "^6.8",
        "monolog/monolog": "^3.9",
        "odan/session": "^6.1",
        "php-di/php-di": "^7.0",
        "ramsey/uuid": "^4.7",
        "responsive-sk/slim4-paths": "^1.0",
        "slim/php-view": "^3.4",
        "slim/psr7": "^1.6",
        "slim/slim": "^4.12",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "friendsofphp/php-cs-fixer": "^3.21"
    },
    "autoload": {
        "psr-4": {
            "MvaBootstrap\\": "src/",
            "MvaBootstrap\\Bootstrap\\": "bootstrap/",
            "MvaBootstrap\\Modules\\": "modules/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MvaBootstrap\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html var/coverage",
        "phpstan": "phpstan analyse src bootstrap modules --level=9",
        "cs-check": "phpcs --standard=PSR12 src bootstrap modules",
        "cs-fix": "phpcbf --standard=PSR12 src bootstrap modules",
        "quality": [
            "@phpstan",
            "@cs-check",
            "@test"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
